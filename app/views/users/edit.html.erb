<% provide(:title, "プロフィール編集画面") %>
<h1>プロフィールを編集</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @user, local: true) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <h3>■公開情報</h3>

      <%= f.label :name, "名前" %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :name, "ユーザーネーム" %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :URL, "ウェブサイト" %>
      <%= f.text_field :URL, class: 'form-control' %>

      <%= f.label :content, "自己紹介" %>
      <%= f.text_area :content, class: 'form-control' %>

      <h3>■非公開情報</h3>

      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :number, "電話番号" %>
      <%= f.number_field :number, class: 'form-control' %>

      <%= f.label :sex, "性別" %>
      <%= f.select :sex, [["",""], ["女性","女性"], ["男性","男性"]], {} ,class: 'form-control' %>

      <%= f.submit "保存", class: "btn btn-primary" %>

      <%= link_to "(パスワードをお忘れですか？)", new_password_reset_path %>

      <%= link_to "(パスワード変更はこちらから)", edit_password_change_path %>

      <%= button_to "アカウントを削除する", login_path, method: :delete,
                                  data: { confirm: "You sure?" } %>

    <% end %>

    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <a href="https://gravatar.com/emails">change</a>
    </div>
  </div>
</div>